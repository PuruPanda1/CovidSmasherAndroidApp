<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ui.profile.profileFragment">

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_not_available" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:text="UserName"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="mail:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/profileMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:text="Mail Id"
        android:textSize="25sp" />

    <RadioGroup
        android:id="@+id/profileGenderGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:padding="2dp"
            android:text="Gender"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/profileMaleRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:fontFamily="@font/poppins"
            android:text="Male"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/prfoileFemaleRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Female"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/profileNotToSayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="None"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/profileResetPasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/mainScreenGreen"
        android:text="Reset Password"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/profileLogOutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/mainScreenGreen"
        android:text="Log Out"
        app:cornerRadius="8dp" />

</LinearLayout>